@page "/assets"

@inject IAssetServices AssetServices

@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Assets</PageTitle>

<h3>Assets</h3>

<div class="mt-2 mb-2">
    <a class="btn btn-primary" role="button" href="/new-asset">New Asset</a>
</div>

@if (_assets == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Asset Type</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var asset in _assets)
            {
                <tr>
                    <td>@asset.AssetType</td>
                    <td>@asset.Name</td>
                    <td>@asset.Description</td>
                    <td>
                        <div class="d-flex">
                            <a class="btn btn-primary me-2" role="button" href="@AssetUrl(asset.Id)">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<AssetRowModel>? _assets = [];

    protected override async Task OnInitializedAsync()
    {
        _assets = await AssetServices.GetAllAsync();
    }

    private static string AssetUrl(Guid id) => $"/asset/{id}";

}
